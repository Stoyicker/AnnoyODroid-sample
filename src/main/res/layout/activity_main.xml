<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/edit_text_api_key_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_marginBottomPercent="2%"
        app:layout_marginEndPercent="5%"
        app:layout_marginLeftPercent="5%"
        app:layout_marginRightPercent="5%"
        app:layout_marginStartPercent="5%"
        app:layout_marginTopPercent="2%">

        <EditText
            android:id="@+id/edit_text_api_key"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="none"
            android:hint="@string/api_key"
            android:inputType="text"
            android:maxLines="1"/>
    </android.support.design.widget.TextInputLayout>

    <Spinner
        android:id="@+id/spinner_methods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_text_api_key_wrapper"
        android:entries="@array/methods_pretty"
        app:layout_heightPercent="10%"
        app:layout_marginBottomPercent="2%"
        app:layout_marginEndPercent="5%"
        app:layout_marginLeftPercent="5%"
        app:layout_marginRightPercent="5%"
        app:layout_marginStartPercent="5%"
        app:layout_marginTopPercent="2%"/>

    <Button
        android:id="@+id/button_rxjava"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/spinner_methods"
        android:text="@string/rxandroid_request"
        app:layout_heightPercent="15%"
        app:layout_marginBottomPercent="2%"
        app:layout_marginEndPercent="5%"
        app:layout_marginLeftPercent="5%"
        app:layout_marginRightPercent="5%"
        app:layout_marginStartPercent="5%"
        app:layout_marginTopPercent="2%"/>

    <Button
        android:id="@+id/button_async"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/button_rxjava"
        android:text="@string/async_request"
        app:layout_heightPercent="15%"
        app:layout_marginBottomPercent="2%"
        app:layout_marginEndPercent="5%"
        app:layout_marginLeftPercent="5%"
        app:layout_marginRightPercent="5%"
        app:layout_marginStartPercent="5%"
        app:layout_marginTopPercent="2%"/>

    <Button
        android:id="@+id/button_sync"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/button_async"
        android:text="@string/sync_request"
        app:layout_heightPercent="15%"
        app:layout_marginBottomPercent="2%"
        app:layout_marginEndPercent="5%"
        app:layout_marginLeftPercent="5%"
        app:layout_marginRightPercent="5%"
        app:layout_marginStartPercent="5%"
        app:layout_marginTopPercent="2%"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_sync"
        app:layout_marginBottomPercent="2%"
        app:layout_marginEndPercent="5%"
        app:layout_marginLeftPercent="5%"
        app:layout_marginRightPercent="5%"
        app:layout_marginStartPercent="5%"
        app:layout_marginTopPercent="2%">

        <TextView
            android:id="@+id/view_response"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"/>

        <ProgressBar
            android:id="@+id/progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:indeterminate="true"
            android:visibility="invisible"/>
    </FrameLayout>
</android.support.percent.PercentRelativeLayout>